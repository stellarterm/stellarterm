{
  "extends": "airbnb",
  "globals": {
    "StellarSdk": true,
    "window": true,
    "document": true,
    "localStorage": true,
    "fetch": true
  },
  "rules": {
    "max-len": ["error", {
      "code": 120,
      "ignoreStrings": true,
      "ignoreTemplateLiterals": true,
      "ignoreUrls": true
    }],
    "react/require-default-props": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": ["error", 4],
    "react/jsx-closing-bracket-location": ["error", "after-props"],
    "jsx-a11y/no-static-element-interactions": 0,
    "indent": ["error", 4],
    "new-cap": "warn",
    "no-underscore-dangle": "off",
    "semi": "error",
    "curly": ["error", "all"]
  }
}
